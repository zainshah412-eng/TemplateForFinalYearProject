<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/_24sdp"
    android:layout_marginEnd="@dimen/_24sdp"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.testassignment.utils.CustomTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/no_search_found"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_20ssp"
        app:font_name="objectiveBold" />

    <com.example.testassignment.utils.CustomTextView
        android:id="@+id/mainMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:text="@string/try_adjusting_your_filters"
        android:textAlignment="center"
        android:textColor="@color/air_awesome_purple_100"
        android:textSize="@dimen/_12ssp"
        android:visibility="visible"
        app:font_name="objectiveRegular" />

</LinearLayout>